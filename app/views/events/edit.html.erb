<h1>Edit My Event</h1>

<%= form_for @event do |f| %>

  <div class="form-group">

    <label>Title</label>

    <%= f.text_field :title, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Date</label>

    <%= f.date_field :date, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Location</label>

    <%= f.text_field :location, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit">Save</button>

  </div>

<% end %>
